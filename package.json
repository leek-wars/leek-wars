{
	"name": "leek-wars-client",
	"version": "2.43.0",
	"scripts": {
		"dev": "vite --mode dev",
		"start": "vite --mode dev",
		"serve": "vite --mode dev",
		"beta": "vite --mode beta",
		"local": "vite --mode local",
		"build": "vite build",
		"build-beta": "vite build --mode beta",
		"preview": "vite preview",
		"lint": "eslint src --ext .ts,.vue",
		"test": "bundlesize",
		"typecheck": "vue-tsc --noEmit",
		"stats": "xdg-open dist/stats.html"
	},
	"dependencies": {
		"@paypal/paypal-js": "^5.1.4",
		"@types/dompurify": "^3.0.5",
		"@typescript-eslint/typescript-estree": "^8.2.0",
		"@vitejs/plugin-vue": "^6.0.3",
		"chart.js": "^4.5.1",
		"codemirror": "^5.65.16",
		"dompurify": "^3.3.1",
		"dotenv": "^8.2.0",
		"js-beautify": "^1.13.0",
		"katex": "^0.16.11",
		"markdown-it": "^12.3.2",
		"mitt": "^3.0.1",
		"monaco-editor": "^0.55.1",
		"pinia": "^2.1.0",
		"register-service-worker": "^1.7.1",
		"swiper": "^12.1.2",
		"vue": "^3.4.0",
		"vue-chartjs": "^5.3.3",
		"vue-i18n": "^9.5.0",
		"vue-json-viewer": "^3.0.4",
		"vue-router": "^4.2.0",
		"vuetify": "^3.4.0",
		"vuex": "^4.1.0"
	},
	"devDependencies": {
		"@mdi/font": "^7.4.47",
		"@types/codemirror": "0.0.96",
		"@types/google.analytics": "0.0.40",
		"@types/node": "^20.0.0",
		"@types/swiper": "^5.4.1",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vue/eslint-config-prettier": "^8.0.0",
		"@vue/eslint-config-typescript": "^12.0.0",
		"autoprefixer": "^10.4.23",
		"eslint": "^8.50.0",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-vue": "^9.17.0",
		"js-yaml": "^4.1.1",
		"prettier": "^3.0.0",
		"rollup-plugin-visualizer": "^6.0.5",
		"sass": "^1.69.0",
		"typescript": "^5.3.0",
		"vite": "^7.3.0",
		"vite-plugin-monaco-editor": "^1.1.0",
		"vite-plugin-node-polyfills": "^0.2.0",
		"vite-plugin-vuetify": "^2.0.0",
		"vue-class-component": "^8.0.0-rc.1",
		"vue-property-decorator": "^10.0.0-rc.3",
		"vue-tsc": "^3.2.1"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"@vue/typescript"
		],
		"parserOptions": {
			"parser": "typescript-estree"
		},
		"rules": {
			"vue/attribute-hyphenation": "error",
			"vue/html-end-tags": "error",
			"vue/mustache-interpolation-spacing": "error",
			"vue/name-property-casing": "error",
			"vue/no-multi-spaces": "error",
			"vue/require-default-prop": "error",
			"vue/require-prop-types": "error",
			"vue/v-bind-style": "error",
			"vue/v-on-style": "error",
			"vue/attributes-order": "error",
			"vue/html-quotes": "error",
			"vue/html-indent": [
				"error",
				"tab",
				{
					"attribute": 1,
					"closeBracket": 0,
					"alignAttributesVertically": true
				}
			],
			"vue/html-self-closing": [
				"error",
				{
					"html": {
						"normal": "never",
						"component": "always"
					},
					"svg": "always"
				}
			],
			"vue/this-in-template": [
				"error",
				"never"
			],
			"vue/html-closing-bracket-spacing": [
				"error",
				{
					"startTag": "never",
					"endTag": "never",
					"selfClosingTag": "always"
				}
			],
			"vue/no-confusing-v-for-v-if": "error",
			"vue/no-use-v-if-with-v-for": "off"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"last 5 years"
	],
	"license": "GPL-3.0",
	"author": "Pilow",
	"description": "Leek Wars game client website",
	"repository": {
		"type": "git",
		"url": "git+https://5pilow@github.com/leek-wars/leek-wars-client.git"
	},
	"bugs": {
		"url": "https://github.com/leek-wars/leek-wars-client/issues"
	},
	"homepage": "https://github.com/leek-wars/leek-wars-client#readme",
	"bundlesize": [
		{
			"path": "./dist/js/*.js",
			"maxSize": "250kB"
		}
	]
}
