{
	"name": "leek-wars-client",
	"version": "2.16.0",
	"scripts": {
		"start": "vue-cli-service serve --mode dev",
		"serve": "vue-cli-service serve --mode dev",
		"beta": "vue-cli-service serve --mode beta",
		"local": "vue-cli-service serve --mode local",
		"build": "VUE_MODE=build vue-cli-service build",
		"build-beta": "VUE_MODE=build NODE_ENV=production vue-cli-service build --mode beta",
		"lint": "vue-cli-service lint",
		"stylelint": "stylelint src/**/*.{vue,css,scss}",
		"test": "bundlesize"
	},
	"dependencies": {
		"codemirror": "^5.55.0",
		"dotenv": "^8.2.0",
		"es6-promise": "^4.2.8",
		"js-beautify": "^1.11.0",
		"katex": "^0.11.0",
		"markdown-it": "^11.0.0",
		"register-service-worker": "^1.7.1",
		"swiper": "^5.4.5",
		"vue": "^2.6.11",
		"vue-awesome-swiper": "^4.1.1",
		"vue-chartist": "^2.3.1",
		"vue-class-component": "^7.2.3",
		"vue-i18n": "^8.18.2",
		"vue-property-decorator": "^9.0.0",
		"vue-router": "^3.3.4",
		"vuetify": "^2.3.2",
		"vuex": "^3.4.0",
		"yaml-loader": "^0.6.0"
	},
	"devDependencies": {
		"@intlify/vue-i18n-loader": "^1.0.0",
		"@types/codemirror": "0.0.96",
		"@types/google.analytics": "0.0.40",
		"@types/node": "^14.0.14",
		"@types/swiper": "^5.4.0",
		"@typescript-eslint/eslint-plugin": "^3.4.0",
		"@typescript-eslint/parser": "^3.4.0",
		"@typescript-eslint/typescript-estree": "^3.4.0",
		"@vue/cli-plugin-eslint": "^4.4.6",
		"@vue/cli-plugin-pwa": "^4.4.6",
		"@vue/cli-plugin-typescript": "^4.4.6",
		"@vue/cli-service": "^4.4.6",
		"@vue/eslint-config-airbnb": "^5.1.0",
		"@vue/eslint-config-prettier": "^6.0.0",
		"@vue/eslint-config-standard": "^5.1.2",
		"@vue/eslint-config-typescript": "^5.0.2",
		"babel-plugin-transform-imports": "^2.0.0",
		"bundlesize": "^0.18.0",
		"eslint": "^7.3.1",
		"eslint-plugin-vue": "^6.2.2",
		"json-loader": "^0.5.7",
		"prettier": "2.0.5",
		"request": "^2.88.2",
		"request-promise": "^4.2.5",
		"sass": "^1.26.9",
		"sass-loader": "^8.0.2",
		"stylelint": "^13.6.1",
		"stylelint-config-prettier": "^4.0.0",
		"stylelint-config-recommended": "^3.0.0",
		"stylelint-processor-html": "^1.0.0",
		"stylelint-scss": "^3.18.0",
		"stylus": "^0.54.7",
		"stylus-loader": "^3.0.2",
		"terser-webpack-plugin": "^3.0.6",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.9.5",
		"typescript-estree": "^18.1.0",
		"uglifyjs-webpack-plugin": "^2.2.0",
		"vue-cli-plugin-vuetify": "^2.0.6",
		"vue-template-compiler": "^2.6.11",
		"vuetify-loader": "^1.5.0",
		"webpack-bundle-analyzer": "^3.8.0"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"@vue/typescript"
		],
		"parserOptions": {
			"parser": "typescript-estree"
		},
		"rules": {
			"vue/attribute-hyphenation": "error",
			"vue/html-end-tags": "error",
			"vue/mustache-interpolation-spacing": "error",
			"vue/name-property-casing": "error",
			"vue/no-multi-spaces": "error",
			"vue/require-default-prop": "error",
			"vue/require-prop-types": "error",
			"vue/v-bind-style": "error",
			"vue/v-on-style": "error",
			"vue/attributes-order": "error",
			"vue/html-quotes": "error",
			"vue/html-indent": [
				"error",
				"tab",
				{
					"attribute": 1,
					"closeBracket": 0,
					"alignAttributesVertically": true
				}
			],
			"vue/html-self-closing": [
				"error",
				{
					"html": {
						"normal": "never",
						"component": "always"
					},
					"svg": "always"
				}
			],
			"vue/this-in-template": [
				"error",
				"never"
			],
			"vue/html-closing-bracket-spacing": [
				"error",
				{
					"startTag": "never",
					"endTag": "never",
					"selfClosingTag": "always"
				}
			],
			"vue/no-confusing-v-for-v-if": "error",
			"vue/no-use-v-if-with-v-for": "off"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"license": "GPL-3.0",
	"author": "Pilow",
	"description": "Leek Wars game client website",
	"repository": {
		"type": "git",
		"url": "git+https://5pilow@github.com/leek-wars/leek-wars-client.git"
	},
	"bugs": {
		"url": "https://github.com/leek-wars/leek-wars-client/issues"
	},
	"homepage": "https://github.com/leek-wars/leek-wars-client#readme",
	"bundlesize": [
		{
			"path": "./dist/js/*.js",
			"maxSize": "250kB"
		}
	]
}
